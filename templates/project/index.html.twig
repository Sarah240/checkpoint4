
{% extends "base.html.twig" %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h1 class="h3">Liste des projets</h1>
                    <a href="{{ path("project_create") }}" class="btn btn-primary"><i class="fas fa-plus"></i></a>
                </div>
                <table class="table table-striped table-hovered mb-0">
                    <thead>
                        <tr>
                            <th class="text-center text-uppercase">Id</th>
                            <th class="text-center text-uppercase">Nom</th>
                            <th class="text-center text-uppercase">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for project in projects %}
                            <tr>
                                <td class="text-center align-middle">{{ project.id }}</td>
                                <td class="text-center align-middle">{{ project.name }}</td>
                                <td class="text-center align-middle">{{ project.text }}</td>
                                 <td class="text-center align-middle">
                                    <a href="{{ path("project_update", { id: project.id }) }}" class="btn btn-warning"><i class="fas fa-edit"></i></a>
                                    <a href="{{ path("project_delete", { id: project.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center align-middle">Aucun projet</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
